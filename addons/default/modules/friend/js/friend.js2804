$(document).ready(function() {
    $('.add_frnd').click(function() {
        var user = $(this).data('user');
        if ($(this).text() == 'Invite Friend') {
            $.post('../friend/add_friend', {user: user}, function(response) {
                if (response.status === 'success') {
                    $('.link_' + user).text('Request Sent');
                }

            }, 'json');
        }
    });
})